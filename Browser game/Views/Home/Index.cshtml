@{
    ViewData["Title"] = "Home Page";
}


@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<style>

    button.knopka {
        color: #00FFFF;
        background: #7FFFD4;
        padding: 35px;
        border-radius: 25px;
        border: 3px solid #E0FFFF;
    }

        button.knopka:hover {
            background: #000000;
        }
</style>
<div class="text-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <h1 class="display-4">@User.Identity.Name<br /><br />Для дальнешей игры вам нужно выбрать персонажа</h1>
        <form action="\Players\Index">
            <button class="knopka">Выбрать</button>
        </form>
    }
    else
    {
        <h1 class="display-4">Добро пожаловать в игру</h1>
    }
    <!--
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        -->
</div>

